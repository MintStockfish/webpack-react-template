{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "esnext",
        "jsx": "react-jsx",
        "types": ["jest", "node"],
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "config/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
